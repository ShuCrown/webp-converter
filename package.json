{
  "name": "webp-converter",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "scripts": {
    "dev:web": "pnpm --filter web dev",
    "dev:api": "pnpm --filter api dev",
    "dev": "pnpm --parallel --filter \"./apps/*\" dev",
    "build": "pnpm --filter \"./apps/*\" build",
    "install:all": "pnpm install",
    "generate-cert": "mkdir -p packages/shared-configs/certificates && openssl req -x509 -newkey rsa:4096 -keyout packages/shared-configs/certificates/key.pem -out packages/shared-configs/certificates/cert.pem -days 365 -nodes -subj '/C=US/ST=State/L=City/O=Organization/CN=localhost'",
    "postinstall": "pnpm run generate-cert"
  },
  "devDependencies": {
    "@types/node": "^20.0.0"
  },
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.18.1",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
